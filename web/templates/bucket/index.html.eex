<%= if @current_user.id == @user.id do %>
  <h1>My Buckets</h1>
  <%= link "Create new", to: user_bucket_path(@conn, :new, @current_user) %>
<% else %>
  <h1><%= @user.name %>'s Buckets</h1>
<% end %>

<ul>
  <%= for bucket <- @buckets do %>
    <li>
      <%= link bucket.name, to: user_bucket_path(@conn, :show, bucket.user, bucket) %>
    </li>
  <% end %>
</ul>
