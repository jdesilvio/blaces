<%= if @current_user.id == @user.id do %>
  <h1>My Bins</h1>
  <%= link "Create new", to: user_bin_path(@conn, :new, @current_user) %>
<% else %>
  <h1><%= @user.name %>'s Bins</h1>
<% end %>

<ul>
  <%= for bin <- @bins do %>
    <li>
      <%= link bin.name, to: user_bin_path(@conn, :show, bin.user, bin) %>
    </li>
  <% end %>
</ul>
